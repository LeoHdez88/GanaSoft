@model GanaSoft.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Identificacion" class="control-label"></label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoRazaId" class="control-label"></label>
                <select asp-for="TipoRazaId" class="form-select">
                    <option selected disabled>Seleccionar un Tipo de Raza</option>
                    @foreach (var item in ViewData["TipoRazas"] as IEnumerable<TipoRaza>)
                    {
                        <option value="@item.TipoRazaId">@item.Descripcion</option>
                    }
                </select>
                <span asp-validation-for="TipoRazaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoId" class="control-label"></label>
                <select asp-for="EstadoId" class="form-select">
                    <option selected disabled>Seleccionar un Estado</option>
                    @foreach (var item in ViewData["Estados"] as IEnumerable<Estado>)
                    {
                        <option value="@item.EstadoId">@item.Descripcion</option>
                    }
                </select>
                <span asp-validation-for="EstadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HaciendaId" class="control-label"></label>
                <select asp-for="HaciendaId" class="form-select">
                    <option selected disabled>Seleccionar un Hacienda</option>
                    @foreach (var item in ViewData["Haciendas"] as IEnumerable<Hacienda>)
                    {
                        <option value="@item.HaciendaId">@item.nombre</option>
                    }
                </select>
                <span asp-validation-for="HaciendaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary form-control" />
                <a asp-action="Index" class="btn btn-secondary">Atras</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
