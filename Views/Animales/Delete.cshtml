@model GanaSoft.Models.AnimalViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminacion</h1>

<h3>Esta seguro de eliminar el animal?</h3>
<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRaza)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreRaza)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreHacienda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreEstado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreHacienda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreHacienda)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AnimalId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Atras</a>
    </form>
</div>
